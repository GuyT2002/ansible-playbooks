---
  - hosts: all
    become: true
    tasks:

    - name: install packages on proxy
      yum:
        name: '{{ item }}'
        state: present
      with_items:
        - tcpdump
        - mailx
      delegate_to: "{{ item }}"
      loop: "{{ groups['proxy'] }}"
    
    - name: run this on B
      yum:
        name: '{{ item }}'
        state: present
      with_items:
        - lsod
        - mailx
      delegate_to: "{{ item }}"
      loop: "{{ groups['database'] }}" 
